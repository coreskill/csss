{{#with skill}}
  <!doctype html>
  <html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{name}} « CoreSkill Skill System (CSSS)</title>
    <meta name="robots" content="noindex">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Rubik:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="csss.css">
    <link rel="stylesheet" href="firebase.css">
    <script src="https://www.gstatic.com/firebasejs/5.4.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.4.1/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.4.1/firebase-firestore.js"></script>
    <link rel="shortcut icon" href="https://coreskill.tech/favicon.ico">
  </head>
  <body>
    {{> header}}

    <main class="container-fluid p-4">

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">CSSS</a></li>
          {{#each categories}}
            <li class="breadcrumb-item"><a href="{{slug}}.html">{{name}}</a></li>
          {{/each}}
          <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
        </ol>
      </nav>

      <div class="row">
        <div class="col-3">
          {{#if requires.length}}
            <h2 class="mt-3">Prerequisites</h2>
            <div class="list-group list-group-flush">
              {{#each requires}}
                {{> list-item compareCategories=../categories}}
              {{/each}}
            </div>
          {{/if}}
        </div>

        <div class="col-6">
          <div class="mt-5 p-3 bg-light">

            <h1 class="display-3">
              <span class="indicator text-center p-1" data-slug="{{slug}}">
                <span class="done">✔️</span>
                <span class="star">⭐️</span>
                <span class="not-done">❔️</span>
              </span>
              {{name}}
            </h1>

            <p>
              <small><a href="graph.html#{{slug}}">Show in dependency graph</a></small>
            </p>

            {{#if text}}
              <p class="m-0 lead text-monospace">{{text}}</p>
            {{/if}}

            {{#if resources.length}}
              <h2 class="mt-5">Resources</h2>
              <div class="list-group list-group-flush">
                {{#each resources}}
                  <a href="{{this.url}}" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                      <h3 class="h5 mb-1">
                        {{#if this.lang}}<span class="badge bg-info">{{this.lang}}</span> {{/if}}
                        {{#if this.desc}}<b>{{this.desc}}</b>{{else}}{{this.url}}{{/if}}
                      </h3>
                    </div>
                    <p class="mb-1">
                      {{#if this.type}}<span class="badge bg-secondary">{{this.type}}</span> {{/if}}
                      {{#if this.desc}}{{this.url}}{{/if}}
                    </p>
                  </a>
                {{/each}}
              </div>
            {{/if}}
          </div>

          {{#if sameLevelSkills.length}}
            <h2 class="mt-5">Also learn these skills</h2>
            <div class="list-group list-group-flush">
              {{#each sameLevelSkills}}
                {{> list-item compareCategories=../categories}}
              {{/each}}
            </div>
          {{/if}}

        </div>

        <div class="col-3">
          {{#if requiredBy.length}}
            <h2 class="mt-5">Following skills</h2>
            <div class="list-group list-group-flush">
              {{#each requiredBy}}
                {{> list-item compareCategories=../categories}}
              {{/each}}
            </div>
          {{/if}}
        </div>
      </div>

    </main>
    <script src="firebase.js"></script>
  </body>
  </html>
{{/with}}
