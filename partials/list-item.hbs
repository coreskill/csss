<a href="{{slug}}"
   class="
    skill-item
    {{#unless skill}}list-group-item-secondary fw-bold{{/unless}}
    list-group-item
    list-group-item-action
    d-flex
    justify-content-start
    align-items-baseline
    {{#if skill}}py-1 ps-0 pe-2{{/if}}
  "
>
  {{#if skill}}
    <span
      class="indicator indicator-list text-center p-1"
      data-slug="{{slug}}"
      data-level="{{level}}"
    >
      <span class="locked">🔒️</span>
      <span class="indicator-icon"></span>
    </span>
    {{#unless resources}}
      {{#unless text}}
        <span class="badge ps-0 pe-2" title="Ask us for explanation">📞️</span>
      {{/unless}}
    {{/unless}}
  {{/if}}

  <span>
    {{#ifCategoriesNotEqual categories compareCategories}}
      <span class="text-muted">
        {{#each categories}}{{name}} » {{/each}}
      </span>
    {{/ifCategoriesNotEqual}}
    {{name}}
  </span>

  {{#if skill}}
    <span class="ms-auto ps-3 text-end">
      {{#ifNotEquals level ""}}
        <span
          class="
            badge rounded-pill
            {{#ifEquals level 0 }}bg-light{{/ifEquals}}
            {{#ifEquals level 1 }}bg-success{{/ifEquals}}
            {{#ifEquals level 2 }}bg-cyan{{/ifEquals}}
            {{#ifEquals level 3 }}bg-info{{/ifEquals}}
            {{#ifEquals level 4 }}bg-primary{{/ifEquals}}
            {{#ifEquals level 5 }}bg-dark{{/ifEquals}}
            {{#ifEquals level "extra" }}bg-warning{{/ifEquals}}
          "
        >{{level}}</span>
        <!--
        {{#if sublevel}}
          <span class="badge rounded-pill bg-secondary">{{sublevel}}</span>
        {{/if}}
        -->
      {{/ifNotEquals}}
      {{#unless requires}}
        <!--<span class="badge bg-success">start here</span>-->
      {{/unless}}
      <span class="note note-empty badge bg-dark" data-slug="{{slug}}">
        <span class="note-value"></span>
        <span tabindex="0" class="note-changer fw-normal">✏️</span>
      </span>
  </span>
  {{/if}}
</a>
