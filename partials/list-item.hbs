<a href="{{slug}}.html"
   class="
    skill-item
    {{#unless skill}}list-group-item-secondary fw-bold{{/unless}}
    list-group-item
    list-group-item-action
    d-flex
    justify-content-start
    align-items-baseline
    {{#if skill}}py-1 ps-0 pe-2{{/if}}
  "
>
  {{#if skill}}
    <span class="indicator indicator-list text-center p-1" data-slug="{{slug}}">
      <span class="locked">🔒️</span>
      <span class="done">✔️</span>
      <span class="star">⭐️</span>
      <span class="not-done">❔️</span>
    </span>
    {{#unless resources}}
      {{#unless text}}
        <span class="badge ps-0 pe-2">🚧️</span>
      {{/unless}}
    {{/unless}}
  {{/if}}

  <span>
    {{#ifCategoriesNotEqual categories compareCategories}}
      <span class="text-muted">
        {{#each categories}}{{name}} » {{/each}}
      </span>
    {{/ifCategoriesNotEqual}}
    {{name}}
  </span>

  {{#if skill}}
    <span class="ms-auto ps-3 text-end">
      {{#if level}}
        <span class="badge rounded-pill bg-primary">{{level}}</span>
        {{#if sublevel}}
          <span class="badge rounded-pill bg-secondary">{{sublevel}}</span>
        {{/if}}
      {{/if}}
      {{#unless requires}}
        <!--<span class="badge bg-success">start here</span>-->
      {{/unless}}
      <span class="note note-empty badge bg-light" data-slug="{{slug}}">
      <span class="note-value"></span>
    </span>
    <span tabindex="0" class="note-changer fw-normal">✏️</span>
  </span>
  {{/if}}
</a>
