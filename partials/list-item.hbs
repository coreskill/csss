<a
  href="{{slug}}.html"
  class="
    skill-item
    {{#unless skill}}list-group-item-secondary font-weight-bold{{/unless}}
    list-group-item
    list-group-item-action
    d-flex
    justify-content-between
    align-items-center
    py-1 pl-0 pr-2
  "
>
  <span>
    {{#if skill}}
      <span class="indicator indicator-list text-center p-1" data-slug="{{slug}}">
        <span class="done">✔️</span>
        <span class="star">⭐️</span>
        <span class="not-done">❔️</span>
      </span>
    {{/if}}

    {{#ifCategoriesNotEqual categories compareCategories}}
      <span class="text-muted">
        {{#each categories}}{{name}} » {{/each}}
      </span>
    {{/ifCategoriesNotEqual}}

    {{#unless resources}}
      {{#unless text}}
        <span class="badge badge-light">🚧️</span>
      {{/unless}}
    {{/unless}}

    {{name}}

  </span>

  <span>
    {{#unless requires}}
      <span class="badge badge-success">start here</span>
    {{/unless}}
    {{#if level}}
      <span class="badge badge-primary badge-pill">{{level}}</span>
        {{#if sublevel}}
          <span class="badge badge-secondary badge-pill">{{sublevel}}</span>
        {{/if}}
    {{/if}}
    <span class="note note-empty badge badge-danger badge-pill" data-slug="{{slug}}">
      <span class="note-value"></span>
      <span tabindex="0" class="note-changer font-weight-normal">✏️</span>
    </span>
  </span>
</a>

